<style>
    .image {
        max-width: 300px;
        max-height: 15ss0px;
    }
</style>

<h1><i class="fa-solid fa-pen"></i>&nbsp; Edit product</h1>
<br>

<%= form_with url: edit_path, data: {turbo: false} do |form| %>
    <%= hidden_field_tag 'item_id', @item_id  %>
    <%= hidden_field_tag 'market_id', @market_id  %>

    <%= hidden_field_tag :lock_version_items, @item_id  %>
    <%= hidden_field_tag :lock_version_markets, @item_id  %>

    <table class="table">
        <thead>
         <tr class = "table-secondary">
            <th scope="col">Data</th>
            <th scope="col">Old Data</th>
            <th scope="col">Edit Data</th>
        </tr>
        </thead>
        <tbody>
            <tr>
                <th scope="row">Product Name</th>
                <td><%= @item.name %></td>
                <td><%=form.text_field :name , class: 'form-control'%></td>
            </tr>
            <tr>
                <th scope="row">Price</th>
                <td><%= @market.price %></td>
                <td><%=form.text_field :price , class: 'form-control'%></td>
            </tr>
            <tr>
                <th scope="row">Quantity</th>
                <td><%= @market.stock %></td>
                <td><%=form.text_field :quantity , class: 'form-control'%></td>
            </tr>
             <tr>
                <th scope="row">Enable Product</th>
                <% if @item.enable == 1 %>
                    <td>Enable</td>
                <% else %>
                    <td>Disable</td>
                <% end %>
                <td><%= form.radio_button :enable, "true" %>
                <%= form.label :enable_item, "Enable" %>
                <%= form.radio_button :enable, "false" %>
                <%= form.label :disable_item, "Disable" %></td>
            </tr>
            <tr>
                <th scope="row">Edit Picture</th>
                <td><%= image_tag @item.image_url, :class => "image" if @item.image %></td>
                <td><%= form.file_field :image %></td>
            </tr>
        </tbody>
    </table>
    <%=form.submit :Edit , class: 'btn btn-primary'%>
<%end%>