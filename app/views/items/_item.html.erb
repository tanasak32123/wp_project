<div id="<%= dom_id item %>">
  <p>
    <strong>Name:</strong>
    <%= item.name %>
  </p>

  <p>
    <strong>Category:</strong>
    <%= item.category %>
  </p>

  <p>
    <strong>Enable:</strong>
    <%= item.enable %>
  </p>

  <p>
    <strong>Image data:</strong>
    <%= image_tag item.image_url if item.image %>
  </p>

</div>
